{
  "language_code": "tr",
  "active": true,
  "settings": {
    "normalize_unicode": true,
    "to_lowercase": true,
    "reduce_symbol_repetition": true,
    "symbol_repetition_threshold": 3,
    "clean_extra_spaces": true,
    "apply_space_trim": true
  },
  "special_rules": {
    "normalize_turkish_chars": true,
    "replace_diacritics": true,
    "convert_q_to_k": true,
    "normalize_spacing": true,
    "normalize_quotes": true,
    "leet_mapping": {
      "!": "i",
      "1": "i",
      "3": "e",
      "4": "a",
      "5": "s",
      "7": "t",
      "@": "a",
      "|": "l"
    }
  }
}
